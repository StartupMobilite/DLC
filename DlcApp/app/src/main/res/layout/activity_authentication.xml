<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.app.dlc.dlc.Authentication">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/auth_radio_1"
            android:id="@+id/consommateursbuttom"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="25dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="34dp" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/auth_radio_2"
            android:id="@+id/distributeurbuttom"
            android:layout_gravity="right"
            android:layout_alignTop="@+id/consommateursbuttom"
            android:layout_toRightOf="@+id/consommateursbuttom"
            android:layout_toEndOf="@+id/consommateursbuttom"
            android:layout_marginLeft="36dp"
            android:layout_marginStart="36dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:text="@string/auth_input_email"
            android:textAlignment="center"
            android:textColor="#0000ff"
            android:ems="10"
            android:id="@+id/email"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_marginBottom="60dp"
            android:layout_above="@+id/password"
            android:layout_centerHorizontal="true" />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textVisiblePassword"
            android:text="@string/auth_input_pwd"
            android:textAlignment="center"
            android:textColor="#0000ff"
            android:ems="10"
            android:id="@+id/password"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_centerVertical="true"
            android:layout_alignLeft="@+id/email"
            android:layout_alignStart="@+id/email" />
        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/auth_btn"
            android:id="@+id/btindentifier"
            android:background="@android:color/holo_orange_dark"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="109dp"
            android:layout_alignRight="@+id/password"
            android:layout_alignEnd="@+id/password"
            android:layout_alignLeft="@+id/password"
            android:layout_alignStart="@+id/password" />
    </RelativeLayout>



