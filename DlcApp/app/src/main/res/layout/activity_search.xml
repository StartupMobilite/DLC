<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.app.dlc.dlc.Search">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/search_1"
        android:id="@+id/text"
        android:layout_marginTop="25dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/search_radio_1"
        android:id="@+id/surfaceButton"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/text"
        android:layout_alignLeft="@+id/text"
        android:layout_alignStart="@+id/text"
        android:layout_marginLeft="45dp"
        android:layout_marginStart="45dp" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/search_radio_2"
        android:id="@+id/radioButton2"
        android:layout_marginRight="50dp"
        android:layout_marginEnd="50dp"
        android:layout_alignTop="@+id/surfaceButton"
        android:layout_alignRight="@+id/text"
        android:layout_alignEnd="@+id/text" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPostalAddress"
        android:text="@string/search_postalcode"
        android:textAlignment="center"
        android:ems="10"
        android:id="@+id/postalText"
        android:layout_below="@+id/surfaceButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="64dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/search_btn_1"
        android:id="@+id/positionButtom"
        android:background="@android:color/holo_orange_dark"
        android:layout_marginTop="75dp"
        android:layout_below="@+id/postalText"
        android:layout_alignRight="@+id/postalText"
        android:layout_alignEnd="@+id/postalText" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/search_btn_2"
        android:id="@+id/positionsButtom"
        android:background="@android:color/holo_orange_dark"
        android:layout_below="@+id/positionButtom"
        android:layout_alignLeft="@+id/positionButtom"
        android:layout_alignStart="@+id/positionButtom"
        android:layout_marginTop="50dp" />

</RelativeLayout>
