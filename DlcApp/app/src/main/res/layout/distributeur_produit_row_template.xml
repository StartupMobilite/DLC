<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
    <View
        android:layout_width="match_parent"
        android:id="@+id/fictive"
        android:layout_below="@+id/card_view"
        android:layout_height="25dp" />

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"

        android:foreground="?android:attr/selectableItemBackground"
        android:paddingBottom="10dp"
        card_view:cardCornerRadius="6dp">


        <RelativeLayout

            android:layout_width="match_parent"
            android:duplicateParentState="true"
            android:layout_height="wrap_content"

            android:paddingBottom="0dp">

            <ImageView
                android:id="@+id/thumbnail"
                android:layout_width="150dp"
                android:layout_height="170dp"
                android:scaleType="centerCrop"
                android:src="@drawable/placeholder" />

            <TextView
                android:id="@+id/tv_nom"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="0dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@+id/thumbnail"
                android:ellipsize="end"
                android:lines="1"
                android:text="Nom du produit"
                android:textAppearance="?android:attr/textAppearanceLarge" />


            <TextView
                android:id="@+id/lbl_quantite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_nom"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@+id/thumbnail"
                android:text="Quantite disponible :" />


            <TextView
                android:id="@+id/tv_quantite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/lbl_quantite"
                android:layout_toRightOf="@+id/lbl_quantite"
                android:paddingLeft="10dp"
                android:text="10" />

            <TextView
                android:id="@+id/lbl_prixInitial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lbl_quantite"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@+id/thumbnail"
                android:text="Prix initial :" />


            <TextView
                android:id="@+id/tv_prixinitial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/lbl_prixInitial"
                android:layout_toRightOf="@id/lbl_prixInitial"
                android:paddingLeft="10dp"
                android:text="Prix initial" />


            <TextView
                android:id="@+id/lbl_dlc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lbl_prixInitial"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@+id/thumbnail"
                android:text="Dlc :" />

            <TextView
                android:id="@+id/tv_dlc"
                android:layout_width="wrap_content"
                android:lines="1"
                android:ellipsize="end"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_prixinitial"
                android:layout_toRightOf="@id/lbl_dlc"
                android:layout_alignBaseline="@id/lbl_dlc"
                android:paddingLeft="10dp"
                android:text="DLxxxxxxxxxC" />


            <TextView
                android:id="@+id/lbl_prixFinal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lbl_dlc"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@+id/thumbnail"
                android:text="Prix final :" />

            <TextView
                android:id="@+id/tv_prixfinal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/lbl_prixFinal"
                android:layout_toRightOf="@id/lbl_prixFinal"
                android:paddingLeft="10dp"
                android:text="Prix final" />


            <TextView
                android:id="@+id/lbl_categorie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lbl_prixFinal"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@+id/thumbnail"
                android:text="Categorie :" />

            <TextView
                android:id="@+id/tv_categorie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/lbl_categorie"
                android:layout_alignBaseline="@id/lbl_categorie"
                android:paddingLeft="10dp"
                android:text="Categorie" />


            <ImageView
                android:id="@+id/icon"
                android:layout_width="20dp"
                android:layout_height="40dp"

                android:clickable="true"
                android:layout_toRightOf="@id/tv_nom"

                android:src="@drawable/ic_more_vert_black_24dp" />

            <TextView
                android:id="@+id/tv_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_prixfinal"
                android:layout_toEndOf="@+id/thumbnail"
                android:paddingLeft="10dp"
                android:text="id"
                android:visibility="invisible" />


        </RelativeLayout>
