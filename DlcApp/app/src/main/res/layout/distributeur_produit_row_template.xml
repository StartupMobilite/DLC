<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:paddingBottom="10dp"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="6dp">


    <RelativeLayout

        android:layout_width="match_parent"
        android:paddingBottom="2dp"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@drawable/placeholder"
            android:layout_width="150dp"
            android:layout_height="170dp"
            android:scaleType="centerCrop"
            android:id="@+id/thumbnail"/>

        <TextView
            android:paddingLeft="10dp"
            android:paddingBottom="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Nom du produit"
            android:id="@+id/tv_nom"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/thumbnail" />

        <TextView
            android:paddingLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quantite"
            android:id="@+id/tv_quantite"
            android:layout_below="@+id/tv_nom"
            android:layout_toEndOf="@+id/thumbnail" />
        <TextView
            android:paddingLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Prix initial"
            android:id="@+id/tv_prixinitial"
            android:layout_below="@+id/tv_quantite"
            android:layout_toEndOf="@+id/thumbnail" />
        <TextView
            android:paddingLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DLC"
            android:id="@+id/tv_dlc"
            android:layout_below="@+id/tv_prixinitial"
            android:layout_toEndOf="@+id/thumbnail" />
        <TextView
            android:paddingLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Prix final"
            android:id="@+id/tv_prixfinal"
            android:layout_below="@+id/tv_dlc"
            android:layout_toEndOf="@+id/thumbnail" />
        <TextView
            android:paddingLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Categorie"
            android:id="@+id/tv_categorie"
            android:layout_below="@+id/tv_prixfinal"
            android:layout_toEndOf="@+id/thumbnail" />
        <ImageView
            android:id="@+id/image_action_like1"
            android:layout_width="60dip"
            android:layout_height="60dip"
            android:padding="10dp"
            android:layout_toEndOf="@+id/tv_nom"

            android:layout_toRightOf="@+id/tv_nom"
            android:src="@drawable/ic_action_action_favorite" />

        <ImageView
            android:id="@+id/image_action_flag"
            android:layout_width="10dip"
            android:layout_height="50dip"
            android:padding="10dp"
            android:layout_toEndOf="@+id/thumbnail"
            android:layout_below="@id/tv_categorie"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_action_action_turned_in" />
        <TextView
            android:paddingLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="id"
            android:visibility="invisible"
            android:id="@+id/tv_id"
            android:layout_below="@+id/tv_prixfinal"
            android:layout_toEndOf="@+id/thumbnail" />


    </RelativeLayout>
